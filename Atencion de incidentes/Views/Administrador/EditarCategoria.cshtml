@model Atencion_de_incidentes.Models.TBMSESPECIALIDADXCATEGORIA

@{
    ViewBag.Title = "EditarCategoria";
    Layout = null;
}
@using (Html.BeginForm("EditarCategoria", "Administrador", FormMethod.Post, new { onsubmit = "return SubmitFormEditarCategoria(this)",@class = "form-horizontal"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div id="result"></div>
    @Html.Hidden("idEspe")
    @Html.Hidden("idCate")
    <div class="form-group">
        <label class="control-label col-md-4 col-sm-4 col-xs-12" for="first-name">
            Categoría Actual
        </label>
        <div class="col-md-8 col-sm-8 col-xs-12">
            @Html.DisplayFor(model => model.TBMSCATCategorias.tipoCategoria, new { htmlAttributes = new { @class = "form-control has-feedback-left", @placeholder = "Categoria" } })
            @Html.ValidationMessageFor(model => model.TBMSCATCategorias.tipoCategoria, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-4 col-sm-4 col-xs-12" for="first-name">
            Especialidad Actual
        </label>
        <div class="col-md-8 col-sm-8 col-xs-12">
            @Html.DisplayFor(model => model.TBMSMAEEspecialidades.tipoEspecialidad, new { htmlAttributes = new { @class = "form-control has-feedback-left", @placeholder = "Especialidad" } })
            @Html.ValidationMessageFor(model => model.TBMSMAEEspecialidades.tipoEspecialidad, "", new { @class = "text-danger" })
        </div>
    </div>
        <div class="form-group">
            <label class="control-label col-md-4 col-sm-4 col-xs-12" for="first-name">
                Asignar Categoría
            </label>
            <div class="col-md-8 col-sm-8 col-xs-12">
                @Html.TextBox("tipoCategoria",null,new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    <div class="form-group">
        <label class="control-label col-md-4 col-sm-4 col-xs-12" for="first-name">
            Asignar Especialidad
        </label>
        <div class="col-md-8 col-sm-8 col-xs-12">
            @Html.TextBox("tipoEspecialidad",null,new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="ln_solid"></div>
    <div class="form-group">
        <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
            <button id="save_data" type="submit" class="btn btn-success">Guardar</button>
        </div>
    </div>
}
