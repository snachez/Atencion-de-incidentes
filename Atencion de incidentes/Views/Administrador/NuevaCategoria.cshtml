@model Atencion_de_incidentes.Models.TBMSESPECIALIDADXCATEGORIA
@{
    Layout = null;
}
@using (Html.BeginForm("NuevaCategoria", "Administrador", FormMethod.Post, new { onsubmit = "return SubmitFormNuevaCategoria(this)", @class = "form-horizontal form-label-left input_mask", @id = "add", @name = "add" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
            Categoría
        </label>
        <div class="col-md-9 col-sm-9 col-xs-12">
            @Html.EditorFor(model => model.TBMSCATCategorias.tipoCategoria, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nombre Categoría" } })
            @Html.ValidationMessageFor(model => model.TBMSCATCategorias.tipoCategoria, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
            Especialidad
        </label>
        <div class="col-md-9 col-sm-9 col-xs-12">
            @Html.EditorFor(model => model.TBMSMAEEspecialidades.tipoEspecialidad, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nombre Especialidad" } })
            @Html.ValidationMessageFor(model => model.TBMSMAEEspecialidades.tipoEspecialidad, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="ln_solid"></div>
    <div class="form-group">
        <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
            <button id="save_data" type="submit" class="btn btn-success">Guardar</button>
            <button type="reset" class="btn btn-info">Resetear</button>
        </div>
    </div>
}
